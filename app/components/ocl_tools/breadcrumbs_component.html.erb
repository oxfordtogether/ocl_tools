<nav class="flex" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2">
    <li>
      <div>
        <a href="<%= home_path %>" class="text-gray-400 hover:text-gray-500">
          <%= icon "heroicon-home", class: "flex-shrink-0 h-5 w-5" %>
          <span class="sr-only">Home</span>
        </a>
      </div>
    </li>
    <% links.each do |link| %>
      <li>
        <div class="flex items-center">
          <%= icon "heroicon-chevron-right", class: "flex-shrink-0 h-5 w-5 text-gray-400" %>
          <%= link_to link.name, link.path, class: "ml-2 text-sm font-medium text-gray-500 hover:text-gray-700" %>
        </div>
      </li>
    <% end %>
  </ol>
</nav>
