<div class="inline-flex -space-x-px">
  <% links.each_with_index do |link, i| %>
    <% if link.active? %>
      <div class="bg-yellow-300 <%="#{size.link_classes}"%> <%= "rounded-l-md" if i.zero? %> <%= 'rounded-r-md' if i == links.length - 1 %> border-gray-300 border cursor-pointer">
        <%= link_to link.name, link.path %>
      </div>
    <% else %>
      <div class="bg-white <%="#{size.link_classes}"%> <%= "rounded-l-md " if i.zero? %> <%= 'rounded-r-md ' if i == links.length - 1 %> border-gray-300 border cursor-pointer">
        <%= link_to link.name, link.path %>
      </div>
    <% end %>
  <% end %>
</div>
