<!-- This example requires Tailwind CSS v2.0+ -->
<div class="inline-block text-left" data-controller='popper'>
  <div>
    <button data-action="click->popper#toggle" data-popper-target="element" type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="menu-button" aria-expanded="true" aria-haspopup="true">
      <%= label %>
      <%= icon 'chevron-down', class: "h-5 w-5 -mr-1 ml-2" %>
    </button>
  </div>
  <div>
    <button data-action="click->popper#close" tabindex="-1" class="hidden fixed inset-0 h-full w-full cursor-default"
      data-popper-target='overlay'
      ></button>
  </div>

  <div data-popper-target="popup">
    <div class="hidden w-56 rounded-md shadow-lg py-1 bg-white border-2" role="menu" aria-orientation="vertical" aria-labelledby="user-menu"
    data-popper-target='content'
    data-transition-enter="transition ease-out duration-100"
    data-transition-enter-start="transform opacity-0 scale-95"
    data-transition-enter-end="transform opacity-100 scale-100"
    data-transition-leave="transition ease-in duration-75"
    data-transition-leave-start="transform opacity-100 scale-100"
    data-transition-leave-end="transform opacity-0 scale-95"
    >
      <div class="py-1" role="none">
        <% links.each do |link| %>
          <%= link_to link.path, class: "text-gray-700 hover:bg-gray-100 hover:text-gray-900 block px-4 py-2 text-sm flex items-center", role: "menuitem", tabindex: "-1" do %>
            <% if link.icon %>
              <%= icon link.icon, class: "text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" %>
            <% end %>
            <span class="truncate">
              <%= link.name %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
