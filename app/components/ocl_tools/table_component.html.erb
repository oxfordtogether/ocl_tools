<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
  <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
    <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
      <table class="table-fixed min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% cols.each do |col| %>
              <th scope="col" class="<%= col.width %> <%= col.classes %> px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">
                <%= col.name %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% collection.each do |obj| %>
            <% if row_url %>
              <tr data-action="click->table#rowClick" data-controller="table" data-table-url=<%= row_url.call(obj) %> class="cursor-pointer" >
                <% cols.each do |col| %>
                  <td class="<%= col.classes %> px-6 py-4 text-sm text-gray-500">
                    <%= col.contents(obj) %>
                  </td>
                <% end %>
              </tr>
            <% else %>
              <tr >
                <% cols.each do |col| %>
                  <td class="<%= col.classes %> px-6 py-4 text-sm text-gray-500">
                    <%= col.contents(obj) %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
