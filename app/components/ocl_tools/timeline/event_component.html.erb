<li>
  <div class="relative pb-8">
    <% unless last_in_list? %>
      <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
    <% end %>
    <div class="relative flex space-x-3">
      <div>
        <span class="h-8 w-8 rounded-full <%= icon_colour %> flex items-center justify-center ring-8 ring-white">
          <%= icon(icon_name, class: "h-5 w-5 text-white") %>
        </span>
      </div>
      <div class="min-w-0 flex-1 flex justify-between space-x-4">
        <div>
          <p class="text-sm text-gray-900">
            <%= title %>
          </p>
          <% if meta %>
            <p class="text-xs text-gray-500 italic my-1">
              <%= meta %>
            </p>
          <% end %>
          <% if body %>
            <div class="mt-1 text-sm text-gray-500">
              <%= body%>
            </div>
          <% end %>
        </div>
        <div class="text-right text-sm whitespace-nowrap text-gray-500">
          <div><%= time&.to_s(:relative) %></div>
        </div>
      </div>
    </div>
  </div>
</li>
