<%= tailwind_form_with(model: @person, local: true) do |form| %>
  <%= form.section "Form title" do %>
    <%= form.text_field :name, width: :half %>
    <%= form.date_picker :date_of_birth, width: :half %>
    <%= form.date_field :start_date, width: :half %>
    <%= form.file_field :file, width: :half %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel '/people/new' %>
    <%= form.submit %>
  <% end %>
<% end %>
